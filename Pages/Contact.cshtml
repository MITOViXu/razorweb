@page
@model razorweb.Pages.ContactModel
@{
  ViewData["Title"] = "Lien he";
}
<h1>Liên hệ</h1>
<form method="post" asp-page="Contact" class=" m-2 p-3 alert-danger" enctype="multipart/form-data">
  @Html.AntiForgeryToken()
  <div class="form-group mb-2" >
    <label asp-for="@Model.customerInfo.CustomerName"></label>
    <input asp-for="customerInfo.CustomerName" class="form-control" />
    <span class="text-danger" asp-validation-for="@Model.customerInfo.CustomerName"></span>
  </div>
  <div class="form-group mb-2" >
    <label asp-for="@Model.customerInfo.Email"></label>
    <input asp-for="customerInfo.Email" class="form-control" />
    <span class="text-danger" asp-validation-for="@Model.customerInfo.Email"></span>
  </div>
  <div class="form-group mb-2" >
    <label asp-for="@Model.customerInfo.YearOfBirth"></label>
    <input asp-for="customerInfo.YearOfBirth" class="form-control" />
    <span class="text-danger" asp-validation-for="@Model.customerInfo.YearOfBirth"></span>
  </div>
  <div class="form-group mb-2" >
    <label asp-for="@Model.FileUpload"></label>
    <input asp-for="@Model.FileUpload" class="form-control" />
    <span class="text-danger" asp-validation-for="@Model.FileUpload"></span>
  </div>
  <div class="form-group mb-2" >
    <label asp-for="@Model.FileUploads"></label>
    <input asp-for="@Model.FileUploads" class="form-control" />
    <span class="text-danger" asp-validation-for="@Model.FileUploads"></span>
  </div>
  <button type="submit" class="btn btn-primary" >Gửi</button>
</form>
<h4 class="text-danger">@Model.thongbao</h4>

<p>Thông tin nhận được</p>
Chào mừng <h4 style="display: inline;">@Model.customerInfo.CustomerName</h4>
<ul>
  <li>Username: @Model.customerInfo.CustomerName </li>
  <li>Email: @Model.customerInfo.Email </li>
  <li>YeaofBirth: @Model.customerInfo.YearOfBirth </li>
</ul>
@section Scripts{
  <partial name="_ValidationScriptsPartial"></partial>
}